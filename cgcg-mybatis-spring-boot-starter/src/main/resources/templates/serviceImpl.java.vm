public class ${table.serviceImplName} extends BaseServiceImpl<${table.mapperName}, ${entity}> implements ${table.serviceName} {

        /**
         * 查询$!{table.comment}分页数据
         *
         * @param keyword 关键字
         * @return Page<${entity}>
         * @author zhicong.lin
         * @date ${cfg.datetime}
         */
        @Override
        public List<${entity}>findByKeyword(String keyword){
        LambdaQueryWrapper<${entity}>wrapper=Wrappers.lambdaQuery(${entity}.class)
        .and(StringUtils.isNotBlank(keyword),w->w
        #foreach($field in ${table.fields})
                #if(${field.propertyType.equals("boolean")})
                        #set($getprefix="is")
                #else
                        #set($getprefix="get")
                #end
                #if(${field.keyFlag})
                #else
                        .or().like(${entity}::${getprefix}${field.capitalName},keyword)
                #end
        #end
        ).orderByDesc(${entity}::getId);
        return this.list(wrapper);
        }
        }
#end

